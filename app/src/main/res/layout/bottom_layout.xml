<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <LinearLayout
            android:id="@+id/ble_scan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:id="@+id/iv_ble_scan"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:src="@drawable/bluetooth_scan"/>
            <TextView
                android:id="@+id/tv_ble_scan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="蓝牙扫描"
                android:textSize="12dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ble_data"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:id="@+id/iv_ble_data"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:src="@drawable/bluetooth_data"/>
            <TextView
                android:id="@+id/tv_ble_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数据接收"
                android:textSize="12dp"/>
        </LinearLayout>

    </LinearLayout>