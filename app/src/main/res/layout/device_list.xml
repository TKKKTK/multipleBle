<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:padding="6dp">
    <ImageView
        android:id="@+id/icon_ble"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/icon_bluetooth"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" />
    <TextView
        android:id="@+id/device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WangGang"
        android:textSize="18dp"
        android:textColor="#636262"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/icon_ble"/>

    <TextView
        android:id="@+id/device_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15:BE:EF:AB:24:45"
        android:textSize="15dp"
        android:layout_below="@+id/device_name"
        android:layout_toRightOf="@+id/icon_ble"/>
    <Button
        android:id="@+id/connect_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="connect"
        android:layout_alignParentRight="true"
        android:textSize="12dp"/>

    <TextView
        android:id="@+id/device_rssi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-51dbm"
        android:textSize="15dp"
        android:layout_below="@+id/connect_device"
        android:layout_alignParentRight="true"/>
</RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray01"/>
</LinearLayout>